<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.himmat.outsider.SinglepostActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="#0e0d0e"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/singlepostimage"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/header"
                app:layout_collapseMode="parallax" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginTop="300dp"
                    app:cardUseCompatPadding="true"
                    >

                    <TextView
                        android:id="@+id/singlepostforgender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/singlepostimage"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:layout_marginTop="18dp"
                        android:text="Room Details" />

                    <TextView
                        android:id="@+id/singlepostforbad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/singlepostforgender"
                        android:layout_alignStart="@+id/singlepostforgender"
                        android:layout_below="@+id/singlepostforgender"
                        android:layout_marginTop="900dp"
                        android:text="this is the title" />

                    <TextView
                        android:id="@+id/singlepostforphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/singlepostforbad"
                        android:layout_alignStart="@+id/singlepostforbad"
                        android:layout_below="@+id/singlepostforbad"
                        android:layout_marginTop="200dp"
                        android:text="this is the title" />

                    <TextView
                        android:id="@+id/singleposthouseno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="46dp"
                        android:layout_marginTop="420dp"
                        android:text="this is the title" />

                </android.support.v7.widget.CardView>
            </RelativeLayout>


            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nestascrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                >
            </android.support.v4.widget.NestedScrollView>


       </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


</android.support.design.widget.CoordinatorLayout>